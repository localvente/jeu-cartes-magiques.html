<body>
    <div class="container">
        <h1>Jeu des Cartes Magiques</h1>
        <p>Achetez des cartes magiques et courez la chance de gagner un smartphone tous les vendredis soir ! Les cartes s'activeront tous les 8 jours et sélectionneront un gagnant parmi ceux qui remplissent toutes les conditions.</p>
        <h2>Comment jouer :</h2>
        <ul>
            <li>Achetez des cartes magiques disponibles sur notre site.</li>
            <li>Chaque vendredi soir, une carte sera activée et un gagnant sera sélectionné.</li>
            <li>Assurez-vous de remplir toutes les conditions pour être éligible au tirage.</li>
        </ul>
        <h2>Cartes Magiques Disponibles</h2>
        <div id="cards">
            <!-- Les cartes magiques seront générées ici par JavaScript -->
        </div>
        <button class="btn" onclick="buyCard()">Acheter une Carte Magique</button>
    </div>
    <script>
        const cardsContainer = document.getElementById('cards');
        const cards = [];

        // Fonction pour afficher les cartes magiques
        function displayCards() {
            cardsContainer.innerHTML = '';
            cards.forEach((card, index) => {
                const cardElement = document.createElement('div');
                cardElement.classList.add('card');
                cardElement.innerHTML = `
                    <h3>Carte Magique #${index + 1}</h3>
                    <p>Date d'achat : ${card.purchaseDate.toLocaleDateString()}</p>
                    <p>Date d'activation : ${card.activationDate.toLocaleDateString()}</p>
                `;
                cardsContainer.appendChild(cardElement);
            });
        }

        // Fonction pour acheter une nouvelle carte magique
        function buyCard() {
            const purchaseDate = new Date();
            const activationDate = new Date(purchaseDate.getTime() + 8 * 24 * 60 * 60 * 1000);
            const newCard = {
                purchaseDate: purchaseDate,
                activationDate: activationDate
            };
            cards.push(newCard);
            displayCards();
        }

        // Fonction pour sélectionner un gagnant
        function selectWinner() {
            const today = new Date();
            const activatedCards = cards.filter(card => card.activationDate <= today);
            if (activatedCards.length > 0) {
                const winnerIndex = Math.floor(Math.random() * activatedCards.length);
                alert(`Félicitations ! Le gagnant est l'utilisateur avec la Carte Magique #${winnerIndex + 1}`);
            } else {
                alert("Aucune carte magique n'a été activée cette semaine.");
            }
        }

        // Vérifier si c'est vendredi et sélectionner un gagnant
        function checkForWinner() {
            const today = new Date();
            if (today.getDay() === 5) { // 5 correspond à vendredi
                selectWinner();
            }
        }

        // Vérifier pour un gagnant tous les jours à minuit
        setInterval(checkForWinner, 24 * 60 * 60 * 1000);

        // Initialiser l'affichage des cartes
        displayCards();
    </script>
</body>
